<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <servlet>
    <servlet-name>ApolloDasServlet</servlet-name>
    <servlet-class>org.bbop.apollo.trellis.TrellisApolloServlet</servlet-class>
    <init-param>
      <param-name>sources_plugin_class</param-name>
      <param-value>genomancer.ucsc.das2.server.UcscSourcesPlugin</param-value>
    </init-param>

    <!-- Sources URL for running Trellis on localhost (accessing local or remote MySQL server) -->
    <init-param>
      <param-name>sources_query</param-name>
      <param-value>http://localhost:8080/jbrowse/das2/ucsc/sources</param-value> 
    </init-param>

    <!-- Sources URL for running Trellis on Elastic Beanstalk (accessing UCSC public MySQL server) -->
<!--      
