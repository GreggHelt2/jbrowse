      <param-name>sources_query</param-name>
      <param-value>http://genomancer.elasticbeanstalk.com/das2/ucsc/sources</param-value> 
    </init-param>
-->

    <!-- run local MySQL server  -->
    <init-param>
      <param-name>dbhost</param-name>
      <param-value>localhost:3306</param-value>
    </init-param>
    
    <!-- use remote UCSC public MySQL server   -->     
    <!--
    <init-param>
      <param-name>dbhost</param-name>
      <param-value>genome-mysql.cse.ucsc.edu</param-value>
    </init-param>
    -->
    <init-param>
      <param-name>dbuser</param-name>
      <param-value>genomep</param-value>
    </init-param>
    <init-param>
      <param-name>dbpassword</param-name>
      <param-value>password</param-value>
    </init-param>
    <!--
	<init-param>
	<param-name>renewal_rate_minutes</param-name>
	<param-value>1440</param-value>
	</init-param>
    -->
  </servlet>
  <servlet-mapping>
    <servlet-name>ApolloDasServlet</servlet-name>
    <url-pattern>/das2/ucsc/*</url-pattern>
  </servlet-mapping>
